<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.andrew.medalert.MainActivity"
    android:background="@drawable/page">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/stages_box"
        android:layout_marginTop="110dp">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/stages_01" />

        <Button
            android:text="Stages"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:id="@+id/stages"
            android:textColor="@android:color/black"
            android:background="@android:color/transparent"
            android:textSize="20sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pReg_Box"
        android:layout_below="@+id/stages_box"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/registration_01" />

        <Button
            android:text="Patient Registration"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:id="@+id/pReg"
            android:textColor="@android:color/black"
            android:background="@android:color/transparent"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/symptoms_box"
        android:layout_below="@+id/pReg_Box"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/symptoms_01" />

        <Button
            android:text="Symptoms"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:id="@+id/symptoms"
            android:textColor="@android:color/black"
            android:background="@android:color/transparent"
            android:textSize="20sp"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/alert_box"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/symptoms_box"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/alerts_01" />

        <Button
            android:text="Alert"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:id="@+id/alert"
            android:textColor="@android:color/black"
            android:background="@android:color/transparent"
            android:textSize="20sp"/>

    </LinearLayout>

</RelativeLayout>
