<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/patient_registration_01">

    <EditText
         android:layout_width="wrap_content"
         android:layout_height="45dp"
         android:inputType="textPersonName"
         android:ems="10"
         android:layout_alignParentTop="true"
         android:layout_marginTop="145dp"
         android:layout_marginStart="105dp"
         android:layout_marginLeft="105dp"
         android:id="@+id/namefield"
         android:textColor="@android:color/black" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/namefield"
        android:layout_marginTop="26dp"
        android:layout_alignRight="@+id/namefield"
        android:layout_alignEnd="@+id/namefield">

        <EditText
            android:layout_width="33dp"
            android:layout_height="45dp"
            android:inputType="date"
            android:ems="10"
            android:textColor="@android:color/black"
            android:id="@+id/day"
            />

        <EditText
            android:layout_width="33dp"
            android:layout_height="45dp"
            android:inputType="date"
            android:ems="10"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:textColor="@android:color/black"
            android:id="@+id/month"/>

        <EditText
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:inputType="date"
            android:ems="10"
            android:textColor="@android:color/black"
            android:id="@+id/year"/>


    </LinearLayout>



    <EditText
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:inputType="number"
        android:ems="10"
        android:layout_above="@+id/submit"
        android:layout_alignLeft="@+id/dates"
        android:layout_alignStart="@+id/dates"
        android:textColor="@android:color/black"
        android:layout_marginBottom="37dp"
        android:id="@+id/poNum"
        android:background="@drawable/border"/>

    <Button
        android:text="Send Alert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="110dp"
        android:textSize="25sp"
        android:id="@+id/submit"
        android:background="@android:color/transparent"/>

</RelativeLayout>